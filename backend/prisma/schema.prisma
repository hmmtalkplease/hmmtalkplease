generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =====================
// ENUMS
// =====================

enum Role {
  USER
  ADMIN
  LISTENER
}

enum BookingStatus {
  PENDING
  ACCEPTED
  REJECTED
}

enum SessionStatus {
  PENDING
  ACCEPTED
  REJECTED
  COMPLETED
}

// =====================
// CORE MODELS (YOU + PERSON-1)
// =====================

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  role      Role     @default(USER)
  age       Int?
  language  String?
  category  String?

  bookings Booking[]
  sessions Session[]

  // Wallet (Person-3)
  wallet       Wallet?
  transactions Transaction[]
}

model Listener {
  id             Int      @id @default(autoincrement())
  email          String   @unique
  password       String
  qualifications String?
  certifications String?
  approved       Boolean  @default(false)
  createdAt      DateTime @default(now())

  availability Availability[]
  bookings     Booking[]
  sessions     Session[]
  ratings      Rating[]

  // Earnings (Person-3)
  earnings Earning[]
  payouts  Payout[]
}

model Availability {
  id         Int      @id @default(autoincrement())
  listenerId Int
  date       DateTime
  slot       String

  listener Listener @relation(fields: [listenerId], references: [id])

  @@unique([listenerId, date, slot])
}

model Booking {
  id         Int  @id @default(autoincrement())
  userId     Int
  listenerId Int
  sessionId  Int? @unique

  user     User     @relation(fields: [userId], references: [id])
  listener Listener @relation(fields: [listenerId], references: [id])
  session  Session? @relation(fields: [sessionId], references: [id])

  createdAt DateTime @default(now())
}

model Session {
  id          Int           @id @default(autoincrement())
  userId      Int
  listenerId  Int
  status      SessionStatus @default(PENDING)
  scheduledAt DateTime

  user     User     @relation(fields: [userId], references: [id])
  listener Listener @relation(fields: [listenerId], references: [id])
  booking  Booking?

  createdAt DateTime @default(now())
}

model Rating {
  id         Int      @id @default(autoincrement())
  listenerId Int
  rating     Int
  review     String?
  createdAt  DateTime @default(now())

  listener Listener @relation(fields: [listenerId], references: [id])
}

// =====================
// WALLET & PAYOUT (PERSON-3)
// =====================

model Wallet {
  id        Int      @id @default(autoincrement())
  balance   Decimal  @default(0.00) @db.Decimal(10, 2)
  currency  String   @default("INR")
  updatedAt DateTime @updatedAt

  userId Int  @unique
  user   User @relation(fields: [userId], references: [id])
}

model Transaction {
  id        Int      @id @default(autoincrement())
  userId    Int
  amount    Decimal  @db.Decimal(10, 2)
  type      String
  status    String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model Earning {
  id         Int      @id @default(autoincrement())
  listenerId Int
  amount     Decimal  @db.Decimal(10, 2)
  sessionId  Int?
  createdAt  DateTime @default(now())

  listener Listener @relation(fields: [listenerId], references: [id])
}

model Payout {
  id          Int       @id @default(autoincrement())
  listenerId  Int
  amount      Decimal   @db.Decimal(10, 2)
  status      String
  createdAt   DateTime  @default(now())
  processedAt DateTime?

  listener Listener @relation(fields: [listenerId], references: [id])
}
